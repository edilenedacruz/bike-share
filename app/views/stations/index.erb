<h1>All Stations<h1>
<hr>
<%@stations.each do |station| %>
    <h3>Name:</h3>
    <p><%= station.name %></p>
    <h3>Dock Count:</h3>
    <p><%= station.dock_count %></p>
    <h3>City:</h3>
    <p><%= station.city %></p>
    <h3>Installation Date:</h3>
    <p><%= station.installation_date %></p>

    <label><a href="/stations/<%=station.id%>">View</a></label>
    <a href="/stations/<%= station.id %>/edit">Edit</a>
    <form action='/stations/<%=station.id%>' method='POST'>
      <input type='hidden' name='_method' value='DELETE'>
      <input type='submit' value='Remove Station'/>
    </form><br/>
    <hr>
<%end %>

<a href="/stations/new">Add New Station</a>
